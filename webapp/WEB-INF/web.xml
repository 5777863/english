<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<servlet>
		<servlet-name>english</servlet-name>
		<servlet-class>my.english.main.English</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>manual</servlet-name>
		<jsp-file>/jmanual.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>course</servlet-name>
		<jsp-file>/jcourse.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>english</servlet-name>
		<url-pattern>/upload</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>english</servlet-name>
		<url-pattern>/login.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>english</servlet-name>
		<url-pattern>/password.html/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>english</servlet-name>
		<url-pattern>/activate.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>english</servlet-name>
		<url-pattern>/index.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>english</servlet-name>
		<url-pattern>/error.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>manual</servlet-name>
		<url-pattern>/manual.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>course</servlet-name>
		<url-pattern>/course.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>english</servlet-name>
		<url-pattern>/feedback.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>english</servlet-name>
		<url-pattern>/registration.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>english</servlet-name>
		<url-pattern>/logout.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>english</servlet-name>
		<url-pattern>/dictionary.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>english</servlet-name>
		<url-pattern>/wordarray.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>english</servlet-name>
		<url-pattern>/unitrename.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>english</servlet-name>
		<url-pattern>/unitadd.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>english</servlet-name>
		<url-pattern>/search.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>english</servlet-name>
		<url-pattern>/staticunit.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>english</servlet-name>
		<url-pattern>/unitedit.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>english</servlet-name>
		<url-pattern>/teststatic.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>english</servlet-name>
		<url-pattern>/test.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>english</servlet-name>
		<url-pattern>/json/*</url-pattern>
	</servlet-mapping>


	<!-- *************************************************************************************************** -->
	<error-page>
		<error-code>401</error-code>
		<location>/man.jsp</location>
	</error-page>


	<!-- *************************************************************************************************** -->
	<filter>
		<filter-name>testFilter</filter-name>
		<filter-class>my.english.filters.Testfilter</filter-class>
	</filter>
	<filter>
		<filter-name>FilterForJson</filter-name>
		<filter-class>my.english.filters.FilterForJson</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>FilterForJson</filter-name>
		<url-pattern>/json/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>FilterForJson</filter-name>
		<url-pattern>/search.html</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>FilterForJson</filter-name>
		<url-pattern>/wordarray.html</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>FilterForJson</filter-name>
		<url-pattern>/upload</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>FilterForJson</filter-name>
		<url-pattern>/unitadd.html</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>FilterForJson</filter-name>
		<url-pattern>/unitrename.html</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>testFilter</filter-name>
		<url-pattern>/unitdell.html</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>testFilter</filter-name>
		<url-pattern>/unitedit.html</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>testFilter</filter-name>
		<url-pattern>/test.html</url-pattern>
	</filter-mapping>




	<!-- *************************************************************************************************** -->
	<session-config>
		<session-timeout>10</session-timeout>
	</session-config>
	<!-- /WEB-INF/verstka.jsp -->
</web-app>